<section>
<h1>Lista de conciertos</h1> 
<% @concerts.each do |concert|%>
<div><%= concert.band_name %>

<%= link_to 'Show',  concert_path(concert)%>
<%= link_to 'Destroy', concert_path(concert), method: :delete, data: { confirm: 'Are you sure?' } %></div>
<% end %>


<h1>Conciertos con más likes</h1>
<% @concerts.each do |concert| %>
<div>
<a><%= link_to concert.band_name, concert_path(concert) %></a> 
<%= concert.likes %> likes!
</div>
<% end %>


</section>

<p class="button">
    <%= link_to 'Añadir nuevo concierto', new_concert_path %>
</p>




